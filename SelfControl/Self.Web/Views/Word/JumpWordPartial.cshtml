@model Self.Core.Entities.Word

<div>
    <div class="modal-header">
        <h4 class="modal-title">Details</h4>
    </div>
    <div class="modal-body">
        <div class="custom-random-word-view">
            <div class="form-group col-md-12">
                <input asp-for="OriginalWord" id="OriginalWord" placeholder="Word" class="form-control" />
            </div>
            <div class="form-group col-md-12">
                <input asp-for="TranslatedWord" id="TranslatedWord" placeholder="Mean" class="form-control" />
            </div>
            <div class="form-group col-md-12">
                <textarea asp-for="Sentence" id="Sentence" rows="4" maxlength="140" placeholder="Example Sentence" class="form-control"></textarea>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        @*<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>*@
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    </div>
</div>